{
  "root": true,
  "extends": [
    "plugin:vue/vue3-essential",
    "eslint:recommended",
    "@vue/eslint-config-typescript/recommended",
    "@vue/eslint-config-prettier"
  ],
  "rules": {
    "vue/multi-word-component-names": "off",
    "@typescript-eslint/ban-ts-comment": "off"
  },
  "ignorePatterns": [
    "!src/.vitepress/**/*",
    "*.config.js",
    "*.g.*",
    "scripts/**/*"
  ]
}
